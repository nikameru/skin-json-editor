<resources>
    <style name="Theme.SkinJSONEditor.LaunchScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#201F1F</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.SkinJSONEditor</item>
    </style>

    <style name="Theme.SkinJSONEditor" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/pink_500</item>
    </style>
</resources>